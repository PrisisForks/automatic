{
    "name": "narrowspark/automatic",
    "type": "composer-plugin",
    "description": "Composer plugin for automate the most common tasks of applications.",
    "keywords": [
        "narrowspark",
        "composer-plugin",
        "viserio",
        "discovery",
        "automatic",
        "configurators",
        "skeleton",
        "composer",
        "audit",
        "security",
        "prefetcher"
    ],
    "homepage": "http://github.com/narrowspark/automatic",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-tokenizer": "*",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "mockery/mockery": "^1.4.3",
        "nyholm/nsa": "^1.2.1",
        "phpunit/phpunit": "^9.5.2",
        "narrowspark/coding-standard": "^5.2.3",
        "ocramius/package-versions": "^2.3.0",
        "justinrainbow/json-schema": "^5.0",
        "symfony/process": "^5.0.0",
        "knplabs/github-api": "^3.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "http-interop/http-factory-guzzle": "^1.0",
        "symfony/filesystem": "^5.2.0",
        "php-http/curl-client": "^2.2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.13-dev"
        },
        "class": [
            "Narrowspark\\Automatic\\AutoScripts\\Plugin",
            "Narrowspark\\Automatic\\LegacyFilter\\Plugin",
            "Narrowspark\\Automatic\\Security\\Plugin",
            "Narrowspark\\Automatic\\Skeleton\\Plugin",
            "Narrowspark\\Automatic\\Automatic"
        ]
    },
    "autoload": {
        "psr-4": {
            "Narrowspark\\Automatic\\": "src/Automatic/",
            "Narrowspark\\Automatic\\AutoScripts\\": "src/AutoScripts/",
            "Narrowspark\\Automatic\\Common\\": "src/Common/",
            "Narrowspark\\Automatic\\LegacyFilter\\": "src/LegacyFilter/",
            "Narrowspark\\Automatic\\Security\\": "src/Security/",
            "Narrowspark\\Automatic\\Skeleton\\": "src/Skeleton/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Narrowspark\\Automatic\\Tests\\": "tests/Automatic/",
            "Narrowspark\\Automatic\\Tests\\Helper\\": "tests/Helper/",
            "Narrowspark\\Automatic\\Tests\\AutoScripts\\": "tests/AutoScripts/",
            "Narrowspark\\Automatic\\Tests\\Common\\": "tests/Common/",
            "Narrowspark\\Automatic\\Tests\\AutoReview\\": "tests/AutoReview/",
            "Narrowspark\\Automatic\\Tests\\LegacyFilter\\": "tests/LegacyFilter/",
            "Narrowspark\\Automatic\\Tests\\Security\\": "tests/Security/",
            "Narrowspark\\Automatic\\Tests\\Skeleton\\": "tests/Skeleton/"
        },
        "files": [
            "tests/Automatic/FunctionMock.php",
            "tests/LegacyFilter/FunctionMock.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs": "php-cs-fixer fix --config=\"./.php_cs\" --ansi",
        "cs:check": "php-cs-fixer fix --config=\"./.php_cs\" --ansi --dry-run",
        "infection": "XDEBUG_MODE=coverage infection --configuration=\"./infection.json\" -j$(nproc) --ansi",
        "phpstan": "phpstan analyse -c ./phpstan.neon --ansi --memory-limit=-1",
        "phpstan:baseline": "phpstan analyse -c ./phpstan.neon --ansi --generate-baseline --memory-limit=-1",
        "psalm": "psalm --threads=$(nproc)",
        "psalm:baseline": "psalm --threads=$(nproc) --set-baseline=psalm-baseline.xml",
        "psalm:baseline:update": "psalm --threads=$(nproc) --update-baseline",
        "psalm:fix": "psalm --alter --issues=all --threads=$(nproc)",
        "rector": "rector process --ansi --dry-run",
        "rector:fix": "rector process --ansi",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html=./.build/phpunit/coverage",
        "test:common": "phpunit --testsuite=\"Narrowspark Automatic Common Test Suite\"",
        "test:automatic": "phpunit --testsuite=\"Narrowspark Automatic Test Suite\"",
        "test:legacy-filter": "phpunit --testsuite=\"Narrowspark Automatic LegacyFilter Test Suite\"",
        "test:security": "phpunit --testsuite=\"Narrowspark Automatic Security Test Suite\"",
        "update:aliases": "php .build/mirror/bin/update-mirror-classes.php"
    },
    "support": {
        "issues": "https://github.com/narrowspark/automatic/issues",
        "source": "https://github.com/narrowspark/automatic"
    }
}
