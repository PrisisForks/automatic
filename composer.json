{
    "name": "narrowspark/discovery",
    "type": "composer-plugin",
    "description": "Composer plugin for automatic project configuration and creation.",
    "keywords": [
        "narrowspark",
        "composer-plugin",
        "viserio",
        "discovery"
    ],
    "homepage": "http://github.com/narrowspark/discovery",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-mbstring": "*",
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^1.6.0",
        "mockery/mockery": "^1.0.0",
        "narrowspark/coding-standard": "^1.0.0",
        "narrowspark/testing-helper": "^6.0.0",
        "phpunit/phpunit": "^7.2.0",
        "symfony/phpunit-bridge": "^4.0.8"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "class": "Narrowspark\\Discovery\\Discovery"
    },
    "autoload": {
        "psr-4": {
            "Narrowspark\\Discovery\\Common\\": "src/Common/",
            "Narrowspark\\Discovery\\": "src/Discovery/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Narrowspark\\Discovery\\Common\\Test\\": "tests/Common/",
            "Narrowspark\\Discovery\\Test\\": "tests/Discovery/"
        },
        "files": [
            "tests/Discovery/TmpDirMock.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "coverage": "phpunit --coverage-html=\"build/logs\"",
        "cs": "php-cs-fixer fix",
        "phpstan": "phpstan analyse -c phpstan.neon -l 7 src --memory-limit=-1",
        "test": "phpunit"
    },
    "support": {
        "issues": "https://github.com/narrowspark/discovery/issues",
        "source": "https://github.com/narrowspark/discovery"
    }
}
